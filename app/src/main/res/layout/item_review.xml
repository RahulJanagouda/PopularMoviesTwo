<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/reviewAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/reviewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/reviewAvatar"
            android:layout_toEndOf="@+id/reviewAvatar"
            android:layout_toRightOf="@+id/reviewAvatar"
            android:padding="8dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewUser"
            android:layout_toEndOf="@+id/reviewAvatar"
            android:layout_toRightOf="@+id/reviewAvatar"
            android:padding="8dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/primary_text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
